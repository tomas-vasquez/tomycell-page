<style>
  /* Contenedor para el spinner */
  .spinner-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: white; /* Fondo blanco */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999; /* Asegura que se superponga a otros elementos */
    opacity: 1; /* Inicialmente visible */
    transition: opacity 1s ease-out; /* Transici贸n de desvanecimiento */
  }

  /* Estilo del spinner */
  .spinner {
    border: 4px solid rgba(0, 128, 0, 0.3); /* Fondo del spinner en verde claro */
    border-top: 4px solid green; /* Color del spinner verde */
    border-radius: 50%;
    width: 50px;
    height: 50px;
    animation: spin 1s linear infinite; /* Animaci贸n de rotaci贸n */
  }

  /* Animaci贸n para hacer girar el spinner */
  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>

<!-- Spinner que cubre toda la pantalla -->
<div class="spinner-overlay">
  <div class="spinner"></div>
</div>
