---
import {
  sectionTitle,
  title,
  description,
  counterData,
} from "@/data/ubication.json";
---

<!-- About Start -->
<div class="container-xxl py-5">
  <div class="container">
    <div class="row g-5 align-items-center">
      <div class="col-lg-6">
        <h5 class="section-title d-flex align-items-center text-primary fs-6">
          <span>{sectionTitle}</span>
          <span class="flex-grow-1 border-bottom border-muted ms-2"></span>
        </h5>
        <h1 class="mb-4">{title}</h1>

        <p class="mb-4">{description}</p>

        <a class="btn btn-primary py-3 px-5 mt-2" href="index.html">Read More</a
        >
      </div>
      <div class="col-lg-6">
        <div id="map"></div>
      </div>
    </div>
  </div>
</div>

<!-- Mapa -->

<style>
  #map {
    position: relative;
    width: 100%;
    padding-bottom: 100%; /* Esto hace que el mapa sea cuadrado */
    height: 0;
  }

  /* Asegurar que el mapa ocupe todo el espacio dentro del contenedor */
  #map iframe,
  #map div {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>
