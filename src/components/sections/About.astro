---
import { Image } from "astro:assets";
import SectionTitle from "@/components/SectionTitle.astro";

import data from "@/data";
const { sectionTitle, title, description } = data.about;
const { workshopsBySection } = data.business;
---

  <div class="container align-items-center" style="overflow: hidden;">
    <div class="row align-items-center">
      <div class="col-lg-6" data-aos="fade-up">
        <Image
          class="img-fluid rounded w-100"
          src="/svg/mobile.svg"
          alt="descriptive text"
          width="200"
          height="150"
        />
      </div>
      <div class="col-lg-6">
        <div data-aos="fade-right">
          <SectionTitle sectionTitle={sectionTitle} title={title} />
        </div>
        <div data-aos="fade-left">
          <p class="m-0">
            {description}
          </p>
          <div class="card w-100 bg-light mt-4 mb-5">
            <div class="card-body text-center">
              <div class="fs-4">
                <h3 class="me-4 fw-bold fs-5 lh-lg">
                  Estamos en:
                  <br class="d-md-none" />
                  {
                    workshopsBySection.map(s => (
                      <span class="mx-2" key={s.sectionId}>
                        <i class="fa fa-map-marker-alt me-1 lead" />
                        {s.sectionId}
                      </span>
                    ))
                  }
                </h3>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
