---
import "@/css/style.css";

interface SeoData {
  title: string;
  description: string;
  // Agrega otros campos seg√∫n lo que se necesite en tu componente Seo
}

interface Props {
  sections: string[];
  seoData: SeoData;
}

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Spinner from "../components/Spinner.astro";
import Seo from "../components/Seo.astro";

// Sections
import About from "@/components/sections/About.astro";
import Testimonial from "@/components/sections/Testimonial.astro";
import Hero from "@/components/Hero.astro";
import Ubication from "@/components/sections/Ubication.astro";
import TopReparations from "@/components/sections/TopReparations.astro";
import CallToAction from "@/components/sections/CallToAction.astro";
import Services from "@/components/sections/Services.astro";
import AboutRepairs from "@/components/sections/AboutRepairs.astro";
import AvailableDepartments from "@/components/sections/AvailableDepartments.astro";

const { sections = [], seoData = {} } = Astro.props;

// Definir un mapeo de nombres a componentes
const sectionsMap = {
  about: About,
  testimonial: Testimonial,
  hero: Hero,
  ubication: Ubication,
  topreparations: TopReparations,
  calltoaction: CallToAction,
  services: Services,
  aboutrepairs: AboutRepairs,
  availabledepartments: AvailableDepartments,
};
---

<!doctype html>
<html lang="es">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta charset="UTF-8" />

    <!-- SEO Component -->
    <Seo seoData={seoData} />

    <!-- Google Web Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- Icon Font Stylesheet -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar />
    <slot />
    {
      sections.map((sectionKey) => {
        const SectionComponent = sectionsMap[sectionKey.toLowerCase()];
        return SectionComponent ? <SectionComponent /> : null;
      })
    }
    <Footer />
    <Spinner />
    <script src="@/scripts/main.js"></script>
  </body>
</html>
